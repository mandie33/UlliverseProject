    <% if(hasDestination){ %>
      <h1 class="cart-title">Votre choix</h2>
      <table id="cart-container">
        <thead>
          <tr>
            <th class="un" scope="col">Planète</th>
            <th class="deux" scope="col">Nombre de personne</th>
            <th class="trois" scope="col">Dates sélectionnées</th>
            <th class="quatre" scope="col">Durée</th>
            <th class="cinq" scope="col">Prix Total</th>
       </thead>
      
      <tbody>
       
        <% cartProducts.forEach(function(cartProduct) { %>
       
          <tr>
            
