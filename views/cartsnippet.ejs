          <td><%= cartProduct.nbUser%></td>
          <% days.forEach(function(day) { %>
          <td><%= day.dates%></td>
          <% }); %>
          <td><%= cartProduct.duration%> jours</td>
          <td><%= cartProduct.totalPrice%> euros</td>
          
      
         
        </tr>
      
      <% }); %>
      
        <% }else{ %>
        
          <div id="emptyCart">
            <h1 class="emptyCart-title">Pas de réservation en cours!</h1>
          
          </div>
       
        </tbody>
        <% } %>
      </table> 
      
      <% cartProduct.price * day.user %>
      
      <p class="list-dest-item"  ><strong>Prix par voyageur: <%= destination.price %>euros</strong></p> 
          
      <%totalPrice = 0%>

          <%  days.forEach(function(user) { %>
                  <%totalPrice += Number(user);%>
